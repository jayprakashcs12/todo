<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Home</title>
        <link rel="stylesheet" href="/css/style.css">
        <link rel="shortcut icon" href="/images/todo.png" type="image/x-icon">
    </head>
    <body>
        <header>
            <div class="logo">Logo</div>
            <ul class="unorder-list">
                <li class="order-list">Welcome <%= name%></li>
                <li class="order-list"><a class="logout-tag" href="/api/v1/user/logout">Logout</a></li>
            </ul>
        </header>
        <main>
            <div class="input_container">
                <h1 class="todo-head">Todo</h1>
                <form class="todo-form" action="/api/v1/todo" method="post">
                    <input class="todo-input" type="text" name="name" placeholder="Enter Your Todo">
                    <button class="form-btn sub-btn" type="submit">Create</button>
                </form>
            </div>
            <div class="todo_list">
                <h1 class="form-head">List of todos</h1>
                <table class="todo-table">
                    <tr>
                        <th>Todo</th>
                        <th colspan="2">Action</th>
                    </tr>
                    <% todos.forEach(todo=>{ %>
                        <tr>
                            <td><%= todo.name%></td>
                            <td><a class="todo-btn sub-btn" href="/api/v1/todo/<%= todo._id%>">Edit</a></td>
                            <td>
                                <form action="/api/v1/todo/<%= todo._id%>?_method=DELETE" method="post">
                                    <button class="todo-btn reset-btn">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <%})%>
                </table>
            </div>
        </main>
    </body>
</html>